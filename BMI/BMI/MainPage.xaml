<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI.MainPage"
             xmlns:SharedStyles="clr-namespace:SharedStyles" >

    <VerticalStackLayout Padding="20, 30, 20, 20" >
        <Label Text="BMI Calculator"
               FontSize="32"
               TextColor="{x:Static Member=SharedStyles:SharedResources.FontColor}"
               Margin="0, 0, 0, 30"
               HorizontalOptions="Center"/>
        <Label Text="Age"
               TextColor="{x:Static Member=SharedStyles:SharedResources.FontColor}"
               Margin="0, 20, 0, 5"/>
        <Entry x:Name="ageInput"
               Placeholder="25 years old"
               MaxLength="3"
               Keyboard="Numeric"
               ClearButtonVisibility="WhileEditing"/>
        <Label Text="Weight (kg)" 
               TextColor="{x:Static Member=SharedStyles:SharedResources.FontColor}"
               Margin="0, 20, 0, 5"/>
        <Entry x:Name="weightInput"
               Placeholder="75 kg"
               MaxLength="6"
               Keyboard="Numeric"
               ClearButtonVisibility="WhileEditing"/>
        <Label Text="Height (cm)"
               TextColor="{x:Static Member=SharedStyles:SharedResources.FontColor}"
               Margin="0, 20, 0, 5"/>
        <Entry x:Name="heightInput"
               Placeholder="174 cm"
               MaxLength="6"
               Keyboard="Numeric"
               ClearButtonVisibility="WhileEditing"/>
        <Button x:Name="Calculate"
                Text="Calculate"
                Clicked="BerechneBMI"
                Margin="0, 20, 0, 0"
                BackgroundColor="{x:Static Member=SharedStyles:SharedResources.BackgroundColor}"
                CornerRadius="20"/>
        <Label Text=""
               x:Name="outputBMI"
               FontSize="26"
               Margin="0, 20, 0, 0"
               HorizontalOptions="Center"/>
        <Label Text=""
               x:Name="outputTip"
               Margin="0, 40, 0, 0"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>
