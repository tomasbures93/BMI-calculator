<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI.Charts"
             Title="Charts">
    <VerticalStackLayout>
        <Grid RowDefinitions="50, 200, 50, 200" ColumnDefinitions="*, *" >
            <Label 
                Text="Wieght Charts"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Label 
                Text="Charts - Coming soon."
                VerticalOptions="End" 
                HorizontalOptions="Center" 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Label 
                Text="BMI Charts"
                VerticalOptions="Center" 
                HorizontalOptions="Start"
                FontSize="20"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Label 
                Text="Charts - Coming soon."
                VerticalOptions="End" 
                HorizontalOptions="Center" 
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>